<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraCapture"
        xmlns:OpenTok="clr-namespace:OpenTok;assembly=WPFVideoRenderer" x:Class="CameraCapture.MainWindow"
        mc:Ignorable="d"
        Title="Camera Switcher" Height="480" Width="640" MinWidth="320" MinHeight="240">
    <Grid>
        <UniformGrid x:Name="SubscriberGrid" Rows="1" Columns="0" Margin="10,137,0,5" HorizontalAlignment="Left" Width="418">
        </UniformGrid>
        <ComboBox Name="CameraList" Width="170" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,44,0,0" DropDownClosed="CameraListDropDownClosed">
        </ComboBox>
        <OpenTok:VideoRenderer x:Name="PublisherVideo" HorizontalAlignment="Right" Height="114" VerticalAlignment="Bottom" Width="184" Margin="0,0,10,340" BorderBrush="#FF5B1919" BorderThickness="1" RenderTransformOrigin="0.511,0.474" >
            <OpenTok:VideoRenderer.Effect>
                <DropShadowEffect Opacity="0.6"/>
            </OpenTok:VideoRenderer.Effect>
            <OpenTok:VideoRenderer.Background>
                <ImageBrush Stretch="UniformToFill">
                </ImageBrush>
            </OpenTok:VideoRenderer.Background>
        </OpenTok:VideoRenderer>
        <Grid HorizontalAlignment="Right" Height="24" VerticalAlignment="Bottom" Width="80" Margin="0,0,10,5">
            <Button x:Name="ConnectDisconnectButton" Content="Connect" HorizontalAlignment="Left" Margin="-13,-306,0,306" Width="80" Click="Connect_Click"/>
        </Grid>
        <Label Content="Video Capture Source" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>